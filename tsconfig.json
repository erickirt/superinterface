{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@superinterface/react": ["packages/react/src"],
      "@superinterface/react/*": ["packages/react/src/*"],
      "@superinterface/root-element": ["packages/root-element/src"],
      "@superinterface/root-element/*": ["packages/root-element/src/*"]
    }
  },
  "include": ["packages/*/src", "types/**/*.d.ts"],
  "exclude": ["node_modules"]
}
