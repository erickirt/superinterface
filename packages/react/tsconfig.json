{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "declaration": true,
    "noEmit": false,
    "paths": {
      "@/*": [
        "./packages/react/src/*",
        "./packages/javascript/src/*",
        "./packages/root-element/src/*"
      ],
      "@superinterface/react": ["./packages/react/src"],
      "@superinterface/react/*": ["./packages/react/src/*"],
      "@superinterface/root-element": ["./packages/root-element/src"],
      "@superinterface/root-element/*": ["./packages/root-element/src/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
